import java.util.Random;
import java.util.Scanner;

public class Ques_1 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter number of element :");
        int N = sc.nextInt();

        Random rd = new Random();

        int[] array = new int[N];
        System.out.print("Enter target element : ");
        int target = sc.nextInt();
        System.out.print("Enter your choice (1.Binary Search, 2. Linear Search): ");
        int choice = sc.nextInt();
        switch (choice) {
            case 1:
                long totalTime = 0;
                for (int j = 0; j < 10; j++) {
                    for (int i = 0; i < N; i++) {
                        array[i] = rd.nextInt(9000) + 1000;
                    }
                    bubbleSort(array);
                    long start = System.nanoTime();
                    BinarySearch(array, target);
                    long end = System.nanoTime();
                    long elapsedTime = end - start;
//                    System.out.println(elapsedTime);
                    totalTime = totalTime + elapsedTime;

                }
                System.out.println("Average time for Binary Search is :" + totalTime / 10);
//                break;

            case 2:
                long totalTimed = 0;
                for (int j = 0; j < 10; j++) {
                    for (int i = 0; i < N; i++) {
                        array[i] = rd.nextInt(9000) + 1000;
                    }
                        long start2 = System.nanoTime();
                        LinearSearch(array,target);
                        long end2 = System.nanoTime();
                        long elapsedTimed = end2 - start2;
//                        System.out.println(elapsedTimed);
                        totalTimed =totalTimed +elapsedTimed;
                    }
                System.out.println("Average time for Linear Search is :" + totalTimed / 10);
                    break;

                }
        }

    // Bubble Sort
    static void bubbleSort(int[] arr){
        for (int i = 0; i < arr.length-1; i++) {
            for (int j = 0; j < arr.length-1; j++) {
                int temp;
                if (arr[j]>arr[j+1]) {
                    temp=arr[j+1];
                    arr[j+1]=arr[j];
                    arr[j]=temp;
                }
            }
        }
//        print(arr,n);
    }

    // Binary Search
    static boolean BinarySearch(int[] arr, int target){
    int start =0;
    int end = arr.length-1;
    boolean isAsc = arr[start]<arr[end];
    while(start<=end){
        int middle = start +(end-start)/2;

        if(arr[middle]==target){
            return true;
        }
        if(isAsc){
            if(arr[middle]<target){
                start = middle +1;
            }else{
                end = middle -1;
            }
        }else{
            if(arr[middle]<target){
                end = middle-1;
            }else{
                start = middle+1;
            }
        }
    }
    return false;
    }
    // Linear Search
    static boolean LinearSearch(int[] arr,int target){
        if(arr.length==0){
            return false;
        }else{
            for(int index=0;index< arr.length;index++){
                if(arr[index]==target){
                    return true;
                }
            }
        }
        return false;
    }

}
